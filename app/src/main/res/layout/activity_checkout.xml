<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6f7">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f8f6f7"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thanh toán"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Địa chỉ giao hàng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_location_on"
                        android:background="@drawable/bg_icon_circle"
                        app:tint="#ef3985"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ giao hàng"
                            android:textStyle="bold"
                            android:textColor="#111827"/>

                        <TextView
                            android:id="@+id/tv_shipping_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang tải..."
                            android:textColor="#6B7280"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_change_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thay đổi"
                        android:textColor="#ef3985"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phương thức vận chuyển (Accordion Style) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <!-- Header: Luôn hiển thị -->
                    <LinearLayout
                        android:id="@+id/layout_shipping_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_local_shipping" 
                            android:background="@drawable/bg_icon_circle"
                            app:tint="#ef3985"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phương thức vận chuyển"
                                android:textStyle="bold"
                                android:textColor="#111827"/>

                            <TextView
                                android:id="@+id/tv_selected_shipping_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiêu chuẩn - 30.000đ"
                                android:textColor="#ef3985"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                        
                        <!-- Mũi tên chỉ thị trạng thái đóng/mở -->
                        <ImageView
                            android:id="@+id/img_shipping_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#6B7280"
                            android:rotation="90"/> 
                    </LinearLayout>

                    <!-- Body: Danh sách tùy chọn (Mặc định ẩn) -->
                    <LinearLayout
                        android:id="@+id/layout_shipping_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:visibility="gone">
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E7EB"
                            android:layout_marginBottom="12dp"/>

                        <RadioGroup
                            android:id="@+id/radio_group_shipping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_standard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiêu chuẩn - 30.000đ\n(Giao trong 8 tiếng trước 20h)"
                                android:textColor="#111827"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp"
                                android:buttonTint="#ef3985"/>

                            <RadioButton
                                android:id="@+id/rb_fast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nhanh - 50.000đ\n(Giao trong 4 tiếng)"
                                android:textColor="#111827"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp"
                                android:buttonTint="#ef3985"/>

                            <RadioButton
                                android:id="@+id/rb_express"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hỏa tốc - 100.000đ\n(Giao trong 1 giờ - Chỉ nội thành SG)"
                                android:textColor="#111827"
                                android:padding="8dp"
                                android:buttonTint="#ef3985"/>
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phương thức thanh toán (Accordion Style - Sửa lại) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <!-- Header: Luôn hiển thị -->
                    <LinearLayout
                        android:id="@+id/layout_payment_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_credit_card"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="#ef3985"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phương thức thanh toán"
                                android:textStyle="bold"
                                android:textColor="#111827"/>

                            <TextView
                                android:id="@+id/tv_selected_payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thanh toán khi nhận hàng (COD)"
                                android:textColor="#ef3985"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                        
                        <!-- Mũi tên -->
                        <ImageView
                            android:id="@+id/img_payment_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#6B7280"
                            android:rotation="90"/> 
                    </LinearLayout>

                    <!-- Body: Danh sách tùy chọn (Mặc định ẩn) -->
                    <LinearLayout
                        android:id="@+id/layout_payment_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:visibility="gone">
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E5E7EB"
                            android:layout_marginBottom="12dp"/>

                        <RadioGroup
                            android:id="@+id/radio_group_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_cod"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thanh toán khi nhận hàng (COD)"
                                android:textColor="#111827"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp"
                                android:buttonTint="#ef3985"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/rb_vnpay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thanh toán Online (MoMo)"
                                android:textColor="#111827"
                                android:padding="8dp"
                                android:buttonTint="#ef3985"/>
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tóm tắt đơn hàng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tóm tắt đơn hàng"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_order_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Chi tiết thanh toán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạm tính"
                        android:textColor="#4B5563"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0đ"
                        android:textColor="#1F2937"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí vận chuyển"
                        android:textColor="#4B5563"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/tv_shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0đ"
                        android:textColor="#1F2937"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng cộng"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111827"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0đ"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#ef3985"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt hàng"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#ef3985"
            android:textColor="@android:color/white"
            android:padding="12dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>