<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".Activity.IntroActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_slider_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/content_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trao gửi yêu thương"
            android:textColor="@color/text_color_dark"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:fontFamily="@font/plus_jakarta_sans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="Khám phá thế giới hoa tươi và những món quà ý nghĩa nhất."
            android:textColor="@color/text_color_medium"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:fontFamily="@font/plus_jakarta_sans_regular" />

        <LinearLayout
            android:id="@+id/page_indicators_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <View
                android:id="@+id/indicator_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_active"
                android:layout_marginEnd="12dp" />

            <View
                android:id="@+id/indicator_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_marginEnd="12dp" />

            <View
                android:id="@+id/indicator_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive" />
        </LinearLayout>

        <Button
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:maxWidth="400dp"
            android:text="Khám phá ngay"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_rounded_primary"
            android:backgroundTint="@color/primary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>